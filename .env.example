# Logan Security Dashboard - Environment Configuration Template
# Copy this file to .env.local for development or .env.production for production
# Never commit actual credentials to version control

# =============================================================================
# BASIC APPLICATION SETTINGS
# =============================================================================
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1
PORT=3000

# =============================================================================
# LOGAN OCI CONFIGURATION
# =============================================================================
# Oracle Cloud Infrastructure Settings
NEXT_PUBLIC_LOGAN_REGION=us-ashburn-1
NEXT_PUBLIC_LOGAN_COMPARTMENT_ID=ocid1.compartment.oc1..your-compartment-id-here
NEXT_PUBLIC_LOGAN_NAMESPACE=your-namespace-here
LOGAN_REGION=us-ashburn-1
LOGAN_COMPARTMENT_ID=ocid1.compartment.oc1..your-compartment-id-here
LOGAN_NAMESPACE=your-namespace-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Oracle Database Connection (REQUIRED)
ORACLE_DB_USER=ADMIN
ORACLE_DB_PASSWORD=your-autonomous-database-admin-password
ORACLE_DB_CONNECTION_STRING=your-database-connection-string
ORACLE_DB_HOST=your-database-host
ORACLE_DB_PORT=1521
ORACLE_DB_SERVICE=your-service-name
ORACLE_DB_SERVICES=finopsmvpdb_high,finopsmvpdb_medium,finopsmvpdb_low
TARGET_SCHEMA=your-schema-name

# Oracle Wallet Configuration (REQUIRED)
TNS_ADMIN=/app/wallet_unzipped
WALLET_PATH=./wallet_unzipped
ORACLE_WALLET_PASSWORD=

# Connection String alternatives (for testing)
ORACLE_CONNECTION_STRINGS=your-connection-string-high,your-connection-string-medium,your-connection-string-low

# Oracle MCP Settings
ORACLE_MCP_ENABLED=true
ORACLE_MCP_SERVER=localhost
ORACLE_MCP_PORT=8080
ORACLE_MCP_SCHEMA=your-mcp-schema
ORACLE_MCP_TOKEN=your-mcp-token-here
ORACLE_MCP_SECURE=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Application Security Keys (Generate secure random values)
ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_SECRET=your-session-secret-key-minimum-32-characters-long
JWT_SECRET=your-jwt-secret-key-for-authentication-here

# API Keys
LOGAN_API_KEY=your-logan-api-key-here
LOGAN_AGENT_API_KEY=your-logan-agent-api-key-here

# =============================================================================
# GRAPH DATABASE CONFIGURATION (Optional)
# =============================================================================
# Neo4j Configuration (for graph analysis)
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password-here

# =============================================================================
# EXTERNAL SERVICES CONFIGURATION
# =============================================================================

# N8N Workflow Integration
N8N_ENABLED=false
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook
N8N_API_KEY=your-n8n-api-key-here

# RITA Integration
RITA_ENABLED=false
RITA_API_ENDPOINT=http://your-rita-server:8080
RITA_API_KEY=your-rita-api-key-here

# Email Configuration
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
FROM_EMAIL=noreply@your-domain.com

# Notification Email
SECURITY_TEAM_EMAIL=security-team@your-domain.com
ADMIN_EMAIL=admin@your-domain.com

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_MAX_MEMORY=256mb
REDIS_TTL=3600

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
CACHE_TTL=3600
MAX_QUERY_RESULTS=10000
QUERY_TIMEOUT=30000
MAX_CONCURRENT_QUERIES=5
MEMORY_LIMIT=2048

# =============================================================================
# FEATURE FLAGS
# =============================================================================
FEATURE_PLUGINS_ENABLED=false
FEATURE_MODULE_SYSTEM_ENABLED=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_THREAT_INTELLIGENCE=true
FEATURE_RITA_INTEGRATION=false
FEATURE_N8N_INTEGRATION=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true
LOG_FILE_PATH=./logs/logan.log
LOG_MAX_SIZE=100M
LOG_MAX_FILES=10

# =============================================================================
# MONITORING AND METRICS
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
METRICS_PATH=/metrics
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/api/health

# =============================================================================
# CLOUD PROVIDER SPECIFIC SETTINGS
# =============================================================================

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_SESSION_TOKEN=your-aws-session-token-if-needed

# Azure Configuration
AZURE_SUBSCRIPTION_ID=your-azure-subscription-id
AZURE_CLIENT_ID=your-azure-client-id
AZURE_CLIENT_SECRET=your-azure-client-secret
AZURE_TENANT_ID=your-azure-tenant-id

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=./credentials/gcp-service-account.json

# Oracle Cloud Configuration
OCI_CONFIG_FILE=~/.oci/config
OCI_CONFIG_PROFILE=DEFAULT
OCI_KEY_FILE=~/.oci/oci_api_key.pem

# =============================================================================
# DOCKER AND DEPLOYMENT CONFIGURATION
# =============================================================================
DOCKER_REGISTRY=your-docker-registry
IMAGE_TAG=latest
DEPLOYMENT_ENV=development

# Domain and SSL
LOGAN_DOMAIN=localhost
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# =============================================================================
# LUDUS CLOUD INTEGRATION (If using enhancement plan)
# =============================================================================
LUDUS_ENABLED=false
LUDUS_API_KEY=your-ludus-api-key-here
LUDUS_API_URL=https://your-ludus-instance.com/api
LUDUS_ADMIN_MODE=false
LUDUS_MAX_RANGES_PER_USER=5
LUDUS_DEFAULT_REGION=us-east-1
LUDUS_ANSIBLE_TIMEOUT=3600
LUDUS_WEBHOOK_SECRET=your-ludus-webhook-secret

# =============================================================================
# ANSIBLE CONFIGURATION (If using enhancement plan)
# =============================================================================
ANSIBLE_ENABLED=false
ANSIBLE_VAULT_PASSWORD=your-ansible-vault-password
ANSIBLE_HOST_KEY_CHECKING=False

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEBUG_ENABLED=false
VERBOSE_LOGGING=false
PERFORMANCE_MONITORING=true
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Python Configuration
PYTHON_PATH=/usr/bin/python3
PYTHONPATH=./scripts

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_TYPE=local
BACKUP_S3_BUCKET=your-backup-bucket-name

# =============================================================================
# LEGACY COMPATIBILITY (DEPRECATED - Use above variables instead)
# =============================================================================
# v0 API Integration (Legacy)
V0_API_KEY=your-v0-api-key-here
V0_API_BASE_URL=https://api.v0.dev/v1